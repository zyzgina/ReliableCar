<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/re_c"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/surfaceViwe"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <TextView
        android:id="@+id/toats_vin"
        style="@style/textview_color_white_size17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="将框置于VIN码前" />

    <ImageButton
        android:id="@+id/back_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_camera_btn" />

    <ImageButton
        android:id="@+id/flash_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/flash_camera_btn" />

    <ImageButton
        android:id="@+id/tackPic_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tack_pic_btn" />

    <TextView
        android:id="@+id/vin_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/showbitmap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/query_vin"
        style="@style/textview_color_white_size17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查询监管信息中..." />

    <RelativeLayout
        android:id="@+id/msg_vin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="@dimen/common_measure_20sp">


        <TextView
            android:id="@+id/jxs_vin"
            style="@style/textview_color_white_size17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="经销商：东风日产" />

        <TextView
            android:id="@+id/company_vin"
            style="@style/textview_color_white_size17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_measure_10sp"
            android:layout_toRightOf="@id/jxs_vin"
            android:text="金融公司：东风日产" />

        <TextView
            android:id="@+id/num_vin"
            style="@style/textview_color_white_size17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jxs_vin"
            android:layout_marginTop="@dimen/common_measure_10sp"
            android:text="今日盘点15台，还剩3台" />
    </RelativeLayout>

    <TextView
        style="@style/textview_color_white_size17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/common_measure_10sp"
        android:text="请扫描车窗前的VIN码" />
</RelativeLayout>