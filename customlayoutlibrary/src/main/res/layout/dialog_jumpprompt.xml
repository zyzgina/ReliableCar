<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/common_measure_20sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/closePrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_close_black" />

        <com.kaopujinfu.appsys.customlayoutlibrary.view.TickView
            android:id="@+id/tickPrompt"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_marginTop="@dimen/common_measure_20sp"/>

        <com.kaopujinfu.appsys.customlayoutlibrary.view.ErrorView
            android:id="@+id/errorPrompt"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_marginTop="@dimen/common_measure_20sp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/title_Prompt"
        style="@style/textview_color_back_gray_singleLine_size17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/common_measure_10sp"
        android:text="加载中..." />

    <TextView
        android:id="@+id/fial_Prompt"
        style="@style/textview_color_back_gray_size17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/common_measure_10sp"
        android:visibility="gone" />
</LinearLayout>