<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_dialog_below_4"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_info_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_measure_30sp"
            android:text="@string/app_name"
            android:textColor="@color/back"
            android:textSize="19sp" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_100sp"
        android:orientation="horizontal"
        android:padding="@dimen/common_measure_10sp">

        <TextView
            android:id="@+id/b_cancel_prompt"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/common_measure_20sp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/back" />

        <TextView
            android:id="@+id/b_view"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/plain_gray" />

        <TextView
            android:id="@+id/b_view_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone" />

        <TextView
            android:id="@+id/b_ok_prompt"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/back" />
    </LinearLayout>
</LinearLayout>