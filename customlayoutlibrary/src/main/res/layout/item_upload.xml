<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_220sp"
        android:orientation="horizontal"
        android:background="@drawable/button_frame5_plain_gray">
        <ImageView
            android:id="@+id/upload_item_upload"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/default_item_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_upload_normal"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/defaultText_item_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/gray"
            android:text="4"
            android:textSize="25sp"
            android:visibility="gone"/>
        <com.kaopujinfu.appsys.customlayoutlibrary.view.TextProgressBar
            android:layout_width="match_parent"
            android:layout_height="@dimen/sp30"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_gravity="bottom"
            android:max="100"
            android:progressDrawable="@drawable/progressbar_green"
            android:id="@+id/textProgressBar_upload"
            android:visibility="gone"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/name_item_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textview_color_back_gray_size17"
        android:text="身份证人像面"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/common_measure_20sp"/>
</LinearLayout>
