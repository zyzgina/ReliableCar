<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_popmenu_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_popmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_measure_20sp"
        android:scaleType="fitXY"
        android:src="@drawable/cal_video"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_popmenu"
        android:ellipsize="end"
        android:gravity="center"
        android:padding="@dimen/common_measure_20sp"
        android:singleLine="true"
        android:textColor="@color/back_gray"
        android:textSize="@dimen/sp17" />
</RelativeLayout>