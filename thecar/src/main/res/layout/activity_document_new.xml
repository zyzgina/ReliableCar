<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_task_new" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/common_measure_30sp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/common_measure_20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/newdocument_icon_image"
            android:gravity="center_vertical"
            android:text="  图片资料"
            android:textColor="@color/back_gray" />

        <GridView
            android:id="@+id/docmentImages_new"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/common_measure_20sp"
            android:horizontalSpacing="@dimen/common_measure_20sp"
            android:listSelector="@color/trans"
            android:numColumns="3"
            android:verticalSpacing="@dimen/common_measure_20sp" />

    </LinearLayout>

</LinearLayout>
