<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/common_measure_20sp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_missioncommit"
                style="@style/textview_color_back_singleLine_size18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_measure_10sp"
                android:text="奥术大师大所" />

            <TextView
                android:id="@+id/details_missioncommit"
                style="@style/textview_color_back_gray_size17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_measure_20sp"
                android:text="的范德萨发斯蒂芬斯蒂芬斯蒂芬现场v徐晓晨v大哥大法官的发给对方水电费水电费" />

            <EditText
                android:id="@+id/content_missioncommit"
                style="@style/textview_color_back_gray_size17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_measure_20sp"
                android:background="@drawable/button_frame1_gray_bggray"
                android:gravity="top"
                android:hint="请输入任务汇报内容并提交"
                android:lines="10"
                android:padding="@dimen/common_measure_20sp"
                android:textColorHint="@color/plain_gray" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
