<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/common_measure_10sp"
        android:paddingLeft="@dimen/common_measure_20sp"
        android:paddingRight="@dimen/common_measure_20sp"
        android:paddingTop="@dimen/common_measure_20sp">

        <TextView
            android:id="@+id/applyDetailsName_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宝马X5"
            android:textColor="@color/back"
            android:textSize="@dimen/sp18" />

        <TextView
            android:id="@+id/applyDetailsState_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_gray_circular"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:text="初审中"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/common_measure_20sp"
        android:paddingLeft="@dimen/common_measure_20sp"
        android:paddingRight="@dimen/common_measure_20sp">

        <TextView
            android:id="@+id/applyDetailsVIN_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LS18291FJFFDS182J"
            android:textSize="@dimen/sp18"/>

        <TextView
            android:id="@+id/applyDetailsPrice_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:text="￥230,900"
            android:textColor="@color/car_document_yellow"
            android:textSize="@dimen/sp21"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_1sp"
        android:layout_marginLeft="@dimen/common_measure_20sp"
        android:background="@color/gray_light" />

</LinearLayout>