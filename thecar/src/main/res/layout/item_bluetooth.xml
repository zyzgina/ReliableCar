<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_bluetooth_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_measure_20sp"
        android:scaleType="fitXY"
        android:src="@drawable/cal_video"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/textview_color_back_gray_size17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_measure_20sp"
        android:layout_marginTop="@dimen/common_measure_20sp"
        android:layout_toRightOf="@id/iv_bluetooth"
        android:gravity="center"
        android:singleLine="true"
        android:text="asdasdasd" />

    <TextView
        android:id="@+id/tv_addr"
        style="@style/textview_color_back_gray_singleLine_size17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginBottom="@dimen/common_measure_20sp"
        android:layout_marginLeft="@dimen/common_measure_20sp"
        android:layout_toRightOf="@id/iv_bluetooth"
        android:text="saxczxcxz" />
</RelativeLayout>