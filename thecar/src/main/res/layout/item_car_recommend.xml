<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/carRecommendImage_item"
            android:layout_width="@dimen/common_measure_280sp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/common_measure_20sp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_nocontent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_measure_20sp"
            android:layout_marginRight="@dimen/common_measure_20sp"
            android:layout_marginTop="@dimen/common_measure_20sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/carRecommendName_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="奥迪A4L 2015款 35 TFSL 自动 舒适性"
                android:textColor="@color/back"
                android:textSize="@dimen/sp20" />

            <TextView
                android:id="@+id/carRecommendPrices_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="新车指导价：36.10万"
                android:textColor="@color/plain_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_measure_20sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/carRecommendLoanInfo_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首付2.20万"
                    android:textColor="@color/check_error"
                    android:textSize="@dimen/sp20" />

                <TextView
                    android:id="@+id/carRecommendLoanInfo1_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_measure_20sp"
                    android:text="月供2654元（24期）"
                    android:textColor="@color/check_error" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_1sp"
        android:layout_marginLeft="@dimen/common_measure_20sp"
        android:background="@color/plain_gray" />

</LinearLayout>