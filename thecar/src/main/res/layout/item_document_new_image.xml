<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/documentNewImages_item"
        android:layout_width="@dimen/common_measure_260sp"
        android:layout_height="@dimen/common_measure_260sp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_frame_plain_gray"
        android:scaleType="fitXY"
        android:src="@drawable/pic_upload_normal" />
    <FrameLayout
        android:id="@+id/documentNewFl_item"
        android:layout_width="@dimen/common_measure_260sp"
        android:layout_height="@dimen/common_measure_260sp"
        android:layout_centerHorizontal="true"
        android:visibility="gone">
        <TextView
            android:id="@+id/documentNewNum_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textview_color_white_size17"
            android:text="10å¼ "
            android:layout_gravity="bottom|right"
            android:padding="@dimen/common_measure_5sp"/>
    </FrameLayout>

    <TextView
        android:id="@+id/documentNewText_item"
        style="@style/textview_color_back_gray_singleLine_size17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/documentNewImages_item"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/common_measure_10sp"
        android:visibility="gone" />
</RelativeLayout>