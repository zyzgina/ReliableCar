<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_measure_10sp"
        android:layout_marginLeft="@dimen/common_measure_20sp"
        android:layout_marginRight="@dimen/common_measure_20sp"
        android:layout_marginTop="@dimen/common_measure_20sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/loanFromDetailsDistributor_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="奔驰S350"
            android:textColor="@color/back"
            android:textSize="@dimen/sp18" />

        <TextView
            android:id="@+id/loanFromDetailsDate_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/common_measure_20sp"
            android:text="14天" />

        <TextView
            android:id="@+id/loanFromDetailsTime_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/gray_light"
            android:text="(2017-05-22)" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_measure_20sp"
        android:layout_marginLeft="@dimen/common_measure_20sp"
        android:layout_marginRight="@dimen/common_measure_20sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/loanFromDetailsVIN_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="AV12JKFJDSK1212K9"
            android:textSize="@dimen/sp18" />

        <TextView
            android:id="@+id/loanFromMoney_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:textColor="@color/yellow_orange"
            android:textSize="@dimen/sp16"
            android:text="￥230,900/￥234,14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_1sp"
        android:layout_marginLeft="@dimen/common_measure_20sp"
        android:background="@color/plain_gray" />

</LinearLayout>