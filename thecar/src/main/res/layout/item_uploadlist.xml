<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/uploadListLayout_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/uploadIcon_item"
        android:layout_width="@dimen/common_measure_200sp"
        android:layout_height="@dimen/common_measure_200sp"
        android:layout_marginRight="@dimen/common_measure_20sp"
        android:src="@drawable/icon_nocontent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/uploadName_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JSEI3259113.JPG"
            android:textColor="@color/back"
            android:textSize="@dimen/sp18" />

        <ProgressBar
            android:id="@+id/uploadProgressBar_item"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_measure_5sp"
            android:max="100"
            android:progressDrawable="@drawable/progressbar_yellow"
            android:layout_marginTop="@dimen/common_measure_10sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_measure_10sp">

            <TextView
                android:id="@+id/uploadProgress_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%" />

            <TextView
                android:id="@+id/uploadSize_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2.3M" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>